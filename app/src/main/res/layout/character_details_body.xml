<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?colorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/characterOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
        android:textSize="28sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:text="Origin" />
    <TextView
        android:id="@+id/characterLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="@id/characterOrigin"
        app:layout_constraintTop_toBottomOf="@id/characterOrigin"
        tools:text="Location" />
    <TextView
        android:id="@+id/characterSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
        android:textSize="24sp"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/characterLocation"
        app:layout_constraintTop_toBottomOf="@id/characterLocation"
        tools:text="Species" />

    <TextView
        android:id="@+id/characterType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="@id/characterSpecies"
        app:layout_constraintTop_toBottomOf="@id/characterSpecies"
        tools:text="Location" />

</androidx.constraintlayout.widget.ConstraintLayout>